<?xml version="1.0"?>
<odoo>

        <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.estate.property.type.form</field>
        <field name="model">estate.estate.property.type</field>
        <field name="arch" type="xml">
             <form string="Property Type">
                 <sheet>
                     <div class="oe_title">
                        <h1> <field name="name"/> </h1>
                     </div>                   
                 </sheet>
             </form>
        </field>
    </record>

    <record id="estate_property_offer_type_tree" model="ir.ui.view">
        <field name="name">estate.estate.property.type.tree</field>
        <field name="model">estate.estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Properties Types">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id="estate_property_types_action" model="ir.actions.act_window">
        <field name="name">Property type</field>
        <field name="res_model">estate.estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>